    <!-- 查询方法 -->

<select id="selectListInIds" resultType="com.swan.test.mybatis.po.AutoEntity">
    select <include refid="columns"/>
    from <include refid="tableName"/>
    where id in
        <foreach collection="idList" open="(" separator="," close=")" item="id">
            #{id}
        </foreach>
    order by
    <if test="orderByList.length > 0">
        <foreach collection="orderByList" separator="," item="rule">
            ${rule.column} ${rule.type}
        </foreach>
    </if>
    <if test="orderByList.length == 0">
        id asc
    </if>
</select>
